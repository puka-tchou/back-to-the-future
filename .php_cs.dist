<?php
/* Ruleset based on: https://github.com/FriendsOfPhp/PHP-CS-Fixer#config-file */
$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__ . '/src')
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@PSR1' => true,
        '@PSR2' => true,
        'single_quote' => true,
        'trim_array_spaces' => true
    ])
    ->setFinder($finder)
;