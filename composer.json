{
  "name": "crouzet/pricing",
  "description": "Price tracking app",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Gaspard Bariller",
      "email": "gaspard.bariller@tutanota.com"
    }
  ],
  "require": {
  },
  "require-dev": {
    "atoum/atoum": "3.4.2",
    "atoum/stubs": "2.6.0",
    "friendsofphp/php-cs-fixer": "2.16.1",
    "kint-php/kint": "3.3.0",
    "phpdocumentor/phpdocumentor": "^3",
    "rector/rector": "0.7.3",
    "squizlabs/php_codesniffer": "3.5.4"
  },
  "scripts": {
    "doc": "phpdoc -d ./src/api -t ./public/server",
    "stylecheck": "phpcs src/ -p || php-cs-fixer fix --dry-run --show-progress=dots",
    "stylecheck:full": "phpcs --report=full src/ -p || php-cs-fixer fix . --dry-run --show-progress=dots --verbose",
    "stylefix": "phpcbf src/ -p || php-cs-fixer fix --show-progress=dots"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "src/api/"
    ]
  }
}
