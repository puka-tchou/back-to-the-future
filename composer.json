{
	"name": "crouzet/pricing",
	"description": "Price tracking app",
	"type": "project",
	"license": "MIT",
	"authors": [
		{
			"name": "Gaspard Bariller",
			"email": "gaspard.bariller@tutanota.com"
		}
	],
	"require": {
		"PHP": "^7.4.2",
		"ext-dom": "*",
		"ext-filter": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-mbstring": "*",
		"ext-simplexml": "*",
		"ext-tokenizer": "*",
		"ext-xml": "*",
		"ext-xmlwriter": "*",
		"ext-PDO": "*",
		"ext-pdo_mysql": "*",
		"ext-yaml": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.4.2",
		"squizlabs/php_codesniffer": "3.5.8"
	},
	"scripts": {
		"stylecheck": "phpcs -p",
		"stylecheck:full": "phpcs --report=full -p",
		"stylefix": "phpcbf -p",
		"test": "phpunit --coverage-text"
	},
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true,
		"github-oauth": {
			"github.com": "46305927a073a07150e7d38df4543074f8351ae4"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"classmap": [
			"src/api/"
		]
	}
}
